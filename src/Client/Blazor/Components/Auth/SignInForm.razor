<div class="dialog">
  <header>
    <h1>Sign In</h1>
    <p>Please fill in the form to sign in!</p>
  </header>

  <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <label>
      <InputText
        type="email"
        placeholder="Email"
        @bind-Value="@model.Email"
      />
    </label>

    <label>
      <InputText
        type="password"
        placeholder="Password"
        @bind-Value="@model.Password"
      />
    </label>

    <button type="submit">Sign In</button>
  </EditForm>

  <footer>
    <p>
      Don't have an account yet?
      Sign up <a href="javascript:void(0);" @onclick="ClickSignUp">here</a>.
    </p>
  </footer>
</div>

@code {
    private readonly SignInModel model = new SignInModel();

    [Parameter]
    public EventCallback ClickSignUp { get; set; }

    [Parameter]
    public EventCallback<SignInModel> HandleSignIn { get; set; }

    private async Task OnValidSubmit()
    {
        if (HandleSignIn.HasDelegate)
        {
            await HandleSignIn.InvokeAsync(model);
        }
    }
}